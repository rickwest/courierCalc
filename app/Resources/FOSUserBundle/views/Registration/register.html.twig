{% extends "@FOSUser/layout.html.twig" %}

{% block body %}
<body>
    <nav class="navbar navbar-transparent navbar-absolute">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="{{ path('fos_user_security_login') }}">
                            Looking to login?
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="wrapper wrapper-full-page">
        <div class="full-page register-page">
            <div class="full-page-background" style="background-image: url('{{ asset('assets/img/canstockphoto41538009.jpg') }}')"></div>
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="header-text">
                                <h2>Courier Calc</h2>
                                <h4>Register for FREE and start generating quotes immediately.</h4>
                                <hr />
                            </div>
                        </div>
                        <div class="col-md-4 col-md-offset-2">
                            <div class="media">
                                <div class="media-left">
                                    <div class="icon">
                                        <i class="pe-7s-car"></i>
                                    </div>
                                </div>
                                <div class="media-body">
                                    <h4>Calculate job distance &amp; duration</h4>
                                    Enter the job start location and destination and Courier Calc will calculate the journey distance and estimate duration.
                                </div>
                            </div>

                            <div class="media">
                                <div class="media-left">
                                    <div class="icon">
                                        <i class="pe-7s-cash"></i>
                                    </div>
                                </div>
                                <div class="media-body">
                                    <h4>Generate quotes in seconds</h4>
                                    Courier Calc will generate an accurate quotation, based on your custom fee scales.
                                </div>
                            </div>
                            <div class="media">
                                <div class="media-left">
                                    <div class="icon">
                                        <i class="pe-7s-graph1"></i>
                                    </div>
                                </div>
                                <div class="media-body">
                                    <h4>Track performance from your dashboard</h4>
                                    Intuitive dashboard shows a summary of your recent quotes and enables you to monitor conversions.
                                </div>
                            </div>

                        </div>
                        <div class="col-md-4 col-md-offset-s1">
                            {% block fos_user_content %}
                                {% include "@FOSUser/Registration/register_content.html.twig" %}
                            {% endblock fos_user_content %}
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer footer-transparent">
                <div class="container">
                    <p class="copyright text-center" style="color:#ffffff">&copy;{{ 'now' | date('Y') }} Courier Calc. A smoother journey <i class="fa fa-car"></i></p>
                </div>
            </footer>
        </div>
    </div>
</body>
{% endblock %}